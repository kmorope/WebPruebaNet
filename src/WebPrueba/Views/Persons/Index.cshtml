@{
}

@model IEnumerable<WebPrueba.Models.Person>

@{
    Layout = "_Layout";
    ViewBag.Title = "Personas";
}
  
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <h1>Personas</h1>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <a class="btn btn-primary"asp-action="Create" asp-controller="Persons" style="margin-bottom: 10px;">
            <i class="glyphicon glyphicon-user"></i>
            <span>Agregar Persona</span>
        </a>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <table class="table" id="personsTable">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Cedula</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombres)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cedula)
                    </td>
                    <td>
                        <a class="fa fa-2x fa-trash-o pointer js-delete" data-id="@item.PersonId"></a>
                    </td>
                </tr>
            }
        </table>

    </div>
</div>

 